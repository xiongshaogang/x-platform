<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xplatform.base.framework.mybatis.dao.IdEntityDao">
  	
  	<select id="getId" parameterType="hashMap" resultType="string">
		<choose>
			<when test="dbType =='mysql' ">
				select  nextval(#{sequenceName ,jdbcType=VARCHAR})
			</when>
			<when test="dbType =='sqlserver' ">
				select  dbo.nextval(#{sequenceName ,jdbcType=VARCHAR})
			</when>
			<when  test="dbType =='oracle' " >
				select EPS_SEQUENCE.NEXTVAL from dual
			</when>
			<otherwise>
				
			</otherwise>
		</choose>
  	</select>
  	
  	<!-- ID GENERATOR INSERT -->
  
  <insert id="insertIdGenerator" parameterType="com.xplatform.base.framework.mybatis.entity.IdEntity">
      insert into act_ge_property (
        NAME_,
        VALUE_,
        REV_
      ) values (
        #{id ,jdbcType=VARCHAR},
        #{value, jdbcType=VARCHAR},
        1
      )
  </insert>

  <!-- ID GENERATOR UPDATE -->
  
  <update id="updateIdGenerator" parameterType="com.xplatform.base.framework.mybatis.entity.IdEntity">
    update act_ge_property
    <set>
      REV_ = #{revisionNext, jdbcType=INTEGER},
      VALUE_ = #{value, jdbcType=VARCHAR}
    </set>
    where NAME_ = #{id, jdbcType=VARCHAR}
      and REV_ = #{revision, jdbcType=INTEGER}
  </update>
  
  <update id="updateSequence" parameterType="string">
  	UPDATE sequence set current_value=current_value+increment WHERE name = #{seqName}
  </update>

  <!-- ID GENERATOR DELETE -->
  
  <delete id="deleteIdGenerator">
    delete from act_ge_property where NAME_ = #{id}
  </delete>

  <!-- ID GENERATOR SELECT -->
  
  <resultMap id="idGeneratorResultMap" type="com.xplatform.base.framework.mybatis.entity.IdEntity">
    <id property="id" column="NAME_" jdbcType="VARCHAR" />
    <result property="value" column="VALUE_" jdbcType="VARCHAR" />
    <result property="revision" column="REV_" jdbcType="INTEGER" />
  </resultMap>
  
  <select id="selectDbSchemaVersion" resultType="string">
    select VALUE_ from act_ge_property where NAME_ = 'schema.version'
  </select>

  <select id="selectIdGenerator" parameterType="string" resultMap="idGeneratorResultMap">
    select * from act_ge_property where NAME_ = #{id}
  </select>
  
  <select id="selectIdGenerators" resultMap="idGeneratorResultMap">
    select * from act_ge_property
  </select>
</mapper>